<?xml version="1.0" encoding="ISO-8859-1" ?>

<!--
	This is the configuration file containing all the default values.
 -->
<configuration>
	<system>
		<core>
			<i18n>
				<overrides>
					<polling-interval>30000</polling-interval>
				</overrides>
			</i18n>
		
			<datasource>
				<!--  url>jdbc:mysql://localhost/dgc4</url>
				<username>root</username>
				<password></password>
				<driver>com.mysql.jdbc.Driver</driver>
				<dialect>org.hibernate.dialect.MySQL5Dialect</dialect-->
				<pool>
					<initial>10</initial>
					<max>50</max>
				</pool>
				<recreate>false</recreate>
			</datasource>
			
			<!-- All about workflow -->
			<workflow>
				<engine>
					<database-schema-update>true</database-schema-update>
					<job-executor-activate>true</job-executor-activate>
				</engine>
			</workflow>
	
			<!-- All about email -->
			<mail>
				<maximum-retries>5</maximum-retries>
				<port>25</port>
				<host>localhost</host>
				<username></username>
				<password></password>
				<from-address>info@collibra.com</from-address>
				<sending-threads>3</sending-threads>
				
				<templates>
					<registration>
						<subject>Welcome $name</subject>
						<body>Dear $name,
						
Welcome to Collibra Data Governance Center.
						
Thanks!
						</body>
					</registration>
				</templates>
			</mail>
			
			<!-- All about the security -->
			<security>
				<guest-access>true</guest-access>
				<public-registration>true</public-registration>
				<password>
					<minimum-length>4</minimum-length>
					<maximum-length>1024</maximum-length>
					<digit-required>false</digit-required>
					<non-alphanumeric-required>false</non-alphanumeric-required>
					<uppercase-required>false</uppercase-required>
					<lowercase-required>false</lowercase-required>
					<username-disallowed>false</username-disallowed>
				</password>
			</security>
		</core>
	</system>
</configuration>