<?xml version="1.0" encoding="UTF-8"?>
<page-definition name="Glossary Term" description="The default glossary term page definition.">
	<configuration>
    <module name="pages/shared/page">
      <regions>
        <content>
          <module name="modules/layout/verticallayout">
            <rows>
              <row id="row1" />
              <row id="row2" />
              <row id="row3" />
            </rows>
            <regions>
              <row1>
                <module name="pages/shared/navigation" />
              </row1>
              <row2>
                <module name="modules/content/titlebar">
                  <resource-type>term</resource-type>
                </module>
              </row2>
              <row3>
                <module name="modules/layout/tabbar">
                  <tabs>
                    <tab1 index="1" id="overview" domid="overviewtab" domclass="overviewclass" enable="true" enablesettings="false" defaultactive="true" />
                    <tab2 index="2" id="attributes" enable="true" enablesettings="false">
                      <actions>
                        <action id="add" enable="true" icon="icon-plus" />
                      </actions>
                    </tab2>
                  </tabs>
                  <regions>
                    <overview>
                      <module name="pages/glossary/tabs/overview" />
                    </overview>
                    <attributes>
                      <module name="pages/glossary/tabs/attributes">
                        <regions>
                          <content>
                            <module name="modules/layout/widgetboard">
                              <columns>
                                <column width="100" />
                              </columns>
                              <widgets>
                                <widget path="widgets/attributes" column="0" row="0" remote="false" />
                              </widgets>
                            </module>
                          </content>
                        </regions>
                      </module>
                    </attributes>
                  </regions>
                </module>
              </row3>
            </regions>
          </module>
        </content>
      </regions>
    </module>
  </configuration>
  <matching-rules>
    <rule path="term" />
  </matching-rules>
</page-definition>